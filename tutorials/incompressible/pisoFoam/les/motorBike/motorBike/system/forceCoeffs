forces
{
    type        forceCoeffs;
    libs ( "libforces.so" );
    writeControl timeStep;
    writeInterval 1;

    patches     ( "motorBike.*" );
    rho         rhoInf;      // Indicates incompressible
    log         true;
    rhoInf      1;           // Redundant for incompressible
    liftDir     (0 0 1);
    dragDir     (1 0 0);
    CofR        (0.72 0 0);  // Axle midpoint on ground
    pitchAxis   (0 1 0);
    magUInf     20;
    lRef        1.42;        // Wheelbase length
    Aref        0.75;        // Estimated
}


